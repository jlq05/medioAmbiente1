{{# partial "titulo" }}
    <title>Trayecto</title>
{{/partial}}

{{# partial "contenido" }}
    <section>
        <div>
            <div class="q-mb-sm">Trayectos</div>
            <section class="seccion-trayecto" style="border: ridge #141414 1px;">
                <table style="text-align:center;">
                    <tr class="row-tr">
                        <td>ID</td>
                        <td>Periodicidad de imputaci√≥n</td>
                        <td>Cant. tramos</td>
                    </tr>
                    {{#each trayectos}}
                        <tr class="row-tr">
                            <td>{{id}}</td>
                            <td>{{periodicidadDeImputacion}}</td>
                            <td>{{cantidadTramos}}</td>
                            <td>
                                <a href="/home/sector/{{sectorId}}/trayecto/{{id}}">
                                    <input type="button" class="btn-borde" value="Ver"/>
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                </table>
           </section>
           <div>
              <a href="/home/sector/{{sectorId}}/trayecto-nuevo">
               <input type="button" class="btn-borde" value="Agregar trayecto" />
              </a>
           </div>
        </div>
    </section>
{{/partial}}

