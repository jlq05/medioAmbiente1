{{# partial "contenido" }}

       
    
    <section>
         <h3 class="header-title">Agregar Medicion</h3>
    
        
        <form class="selector-organizacion" action="/nuevaMedicion" method="POST">
            <div class="campo">
            <span style="word-spacing: 1.5em">tipo de consumo:</span><input  type="text" id="nombreComienzaCon"  placeholder="Seleccione tipo consumo" max="25">
