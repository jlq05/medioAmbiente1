            <div class="campo">
                <span style="word-spacing: 5em">periocidad :</span>
                    <select  style="width:200px">

                    <option>anual</option>

                    <option>mensual</option>



                </select>
            </div>



            <div class="campo">
                <span>periodo de imputacion: </span><input type="date" id="nombreComienzaCon"  placeholder="Selecione periodo" max="25">
            </div>

        </form>
        <div>

            </section>
            <input type="button"  class="btn-borde-medicion" value="Agregar" autofocus="true" />
        </div>
    </section>
