{{# partial "titulo" }}
    <title>NuevaMedicion</title>
{{/partial}}
<head>
    <link rel="stylesheet" type="text/css" href="/nuevoRegistroMedicion.css">
</head>

{{# partial "contenido" }}
     <section>
        <h3 class="header-title">Agregar Medicion</h3>

        <form class="selector-organizacion" action="/home/medicion" method="POST">
            <div class="campo">
                Tipo de consumo
                <div class="container-tipo">
                    {{#each tiposConsumo}}
                        <div class="tipo-consumo">
                            <input type="radio" id="{{id}}" name="tipoDeConsumo" value="{{id}}">
                            <label for="{{id}}">{{tipoDescripcion}}</label>
                        </div>
                    {{/each}}
                </div>
            </div>
            <div class="campo">
                <span style="word-spacing: 7.5em">Valor :</span>
                <input type="number" name="valorDatosActividad" placeholder="Seleccione valor" max="25">
            </div>
            <div class="campo">
                <span style="word-spacing: 5em">Periocidad :</span>
                <div class="container-tipo">
                    <div class="tipo-periodicidad">
                        <input type="radio" name="tipoDePeriodicidad" value="anual">
                        <label for="anual">Anual</label>
                    </div>
                    <div class="tipo-periodicidad">
                        <input type="radio" name="tipoDePeriodicidad" value="mensual">
                        <label for="mensual">Mensual</label>
                    </div>
                </div>
            </div>
            <div class="campo">
                <span>Periodo de imputacion: </span>
                <input type="date" name="periodicidad"  placeholder="Selecione periodo" max="25">
            </div>
            <div>
                <input type="submit"  class="btn-borde-medicion" value="Agregar" />
            </div>
        </form>
    </section>
{{/partial}}

{{> layout.html.hbs }}